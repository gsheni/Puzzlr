<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.login.widget.ProfilePictureView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal	 = "true"
        android:id="@+id/friend_profile">
    </com.facebook.login.widget.ProfilePictureView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below = "@id/friend_profile"
        android:text=""
        android:id="@+id/friend_name"
        android:padding="15dp"
        android:layout_centerHorizontal	 = "true"
        android:textSize="32sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/friend_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_centerHorizontal	 = "true"
        android:textSize="32sp"
        android:gravity="center"
        android:text=""
        android:id="@+id/question_fill" />

    <Button
        android:layout_width="250dp"
        android:layout_centerHorizontal	 = "true"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/question_fill"
        android:hint=""
        android:id="@+id/choiceA" />
    <Button
        android:layout_width="250dp"
        android:layout_centerHorizontal	 = "true"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/choiceA"
        android:hint=""
        android:id="@+id/choiceB" />
    <Button
        android:layout_width="250dp"
        android:layout_centerHorizontal	 = "true"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/choiceB"
        android:hint=""
        android:id="@+id/choiceC" />


</RelativeLayout>